rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Whitelist collection: only admins can write, authenticated users can read their own entry
    match /whitelist/{email} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.email == 'flextheater@gmail.com';
    }

    // Admin list: only the super admin can read/write
    match /admins/{email} {
      allow read, write: if request.auth != null && request.auth.token.email == 'flextheater@gmail.com';
    }
  }
}
